<% include ./partials/head.ejs %>
<% include ./partials/header.ejs %>
<% include ./partials/navigation.ejs %>
<main class="main">
        <h1 class="main-title"><%= title %></h1>
        <span id="success" class="success-message">
            <%= (messages && messages.success) ? messages.success : "" %>
        </span>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Navn</th>
                <th>Email</th>
                <th>Rolle</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td>
                    <a href="/admin/editUser/<%= user.id %>">Rediger</a>
                    <a class="delete-pop-up" href="/admin/deleteUser/<%= user.id %>">Slet</a>
                </td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.name %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</main>
<script>
    const deleteButtons = document.querySelectorAll('.delete-pop-up');
    deleteButtons.forEach(button => {
        button.addEventListener('click', (e) => {
            e.preventDefault();
            
            var answer = window.confirm("Sikker p√• at du vil slette?")
            if (answer) {
                window.location.href = button.href;
            }
        })
    });
</script>
<% include ./partials/footer.ejs %>
