<% include ./partials/head.ejs %>
<% include ./partials/header.ejs %>
<% include ./partials/navigation.ejs %>
<main class="main">
        <h1 class="main-title"><%= title %></h1>
    <form method="post" class="create-product">
        <fieldset>
                <% include ./partials/image-picker.ejs %>
        </fieldset>
        <fieldset>
            <label for="title">Titel</label>
            <input type="text" name="title" id="title" value="<%= (messages && messages.title) ? messages.title : "" %>">
            <span id="titleError" style="color: red;">
                <%= (messages && messages.titleError) ? messages.titleError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="description">Beskrivelse</label>
            <textarea name="description" id="description"><%= (messages && messages.description) ? messages.description : "" %></textarea>
            <span id="descriptionError" style="color: red;">
                <%= (messages && messages.descriptionError) ? messages.descriptionError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="caseNumber">Sagsnr.</label>
            <input type="number" name="caseNumber" id="caseNumber" value="<%= (messages && messages.caseNumber) ? messages.caseNumber : "" %>">
            <span id="caseNumberError" style="color: red;">
                <%= (messages && messages.caseNumberError) ? messages.caseNumberError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="price">Pris</label>
            <input type="number" name="price" id="price" value="<%= (messages && messages.price) ? messages.price : "" %>">
            <span id="priceError" style="color: red;">
                <%= (messages && messages.priceError) ? messages.priceError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="rentGross">Husleje (Brutto)</label>
            <input type="number" name="rentGross" id="rentGross" value="<%= (messages && messages.rentGross) ? messages.rentGross : "" %>">DKK
            <span id="rentGrossError" style="color: red;">
                <%= (messages && messages.rentGrossError) ? messages.rentGrossError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="rentNet">Husleje (Netto)</label>
            <input type="number" name="rentNet" id="rentNet" value="<%= (messages && messages.rentNet) ? messages.rentNet : "" %>">DKK
            <span id="rentNetError" style="color: red;">
                <%= (messages && messages.rentNetError) ? messages.rentNetError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="residentialSize">Bolig m2</label>
            <input type="number" name="residentialSize" id="residentialSize" value="<%= (messages && messages.residentialSize) ? messages.residentialSize : "" %>" >
            <span id="residentialSizeError" style="color: red;">
                <%= (messages && messages.residentialSizeError) ? messages.residentialSizeError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="groundArea">Grundareal m2</label>
            <input type="number" name="groundArea" id="groundArea" value="<%= (messages && messages.groundArea) ? messages.groundArea : "" %>">
            <span id="groundAreaError" style="color: red;">
                <%= (messages && messages.groundAreaError) ? messages.groundAreaError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="category">category</label>
            <select name="category" id="category">
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>"><%= category.name %></option>
                <% }) %>
            </select>
        </fieldset>
        <button type="submit">Gem</button>
    </form>
</main>
<script src="/scripts/validator.js"></script>
<script>
    jsb.validationEmpty('.create-product', '#title', 'Udfyld venligst titel!', '#titleError');
    jsb.validationEmpty('.create-product', '#caseNumber', 'Udfyld venligst varenummer!', '#caseNumberError');
    jsb.validationEmpty('.create-product', '#description', 'Udfyld venligst beskrivelse!', '#descriptionError');
    jsb.validationEmpty('.create-product', '#price', 'Udfyld venligst pris!', '#priceError');
    jsb.validationEmpty('.create-product', '#rentGross', 'Udfyld venligst husleje brutto!', '#rentGrossError');
    jsb.validationEmpty('.create-product', '#rentNet', 'Udfyld venligst husleje netto!', '#rentNetError');
    jsb.validationEmpty('.create-product', '#residentialSize', 'Udfyld venligst Boligst√∏rrelse!', '#residentialSizeError');
    jsb.validationEmpty('.create-product', '#groundArea', 'Udfyld venligst Grundareal!', '#groundAreaError');
</script>
<% include ./partials/footer.ejs %>
